<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddPayment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="71dp"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="74dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Add Payment"
                    android:textColor="@color/black"
                    android:textSize="34sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView22"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Customer Name"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cusname"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Viraj Adhihetti"
                android:inputType="text"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Customer Address"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cusAddress"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Templer Road,Kirulupone,Colombo"
                android:inputType="text"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Customer Mobile"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cusMobile"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="077*******"
                android:inputType="number"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textView25"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Price of Payment"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/payPrice"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="120000.00"
                android:inputType="number"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textView45"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Card Type"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cardType"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="visa/master"
                android:inputType="text"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textViewdd"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:textColor="#954040"
                android:text="Card Number"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cardNumber"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Type 16 Digit Number"
                android:inputType="number"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textViewdd4"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Holder Name"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cardUserName"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="G.J.Senarathne"
                android:inputType="text"
                android:paddingStart="9dp"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textViewdd3"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="cvc"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cardcvc"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Type 3 digit back"
                android:inputType="number"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textViewdd388"
                android:layout_width="334dp"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:text="Expire Date"
                android:textColor="#954040"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/cardExDate"
                android:layout_width="332dp"
                android:layout_height="53dp"
                android:background="@drawable/rounded_edittext"
                android:ems="10"
                android:hint="Type Expire Date"
                android:inputType="text"
                android:paddingLeft="9dp" />

            <TextView
                android:id="@+id/textViewdd6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="#954040"
                android:textColor="#954040"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button"
                android:layout_width="270dp"
                android:layout_height="48dp"
                android:background="#1111E1"
                android:fontFamily="#954040"
                android:onClick="createPay"
                android:text="Add Payment"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:backgroundTint="#1111E1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="39dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>